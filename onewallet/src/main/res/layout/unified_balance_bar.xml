<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:background="@drawable/link_progress_bar_rounded_bg">

    <ImageView
        android:id="@+id/unified_balance_icon"
        android:layout_width="24dp"
        android:layout_height="19dp"
        android:background="@drawable/unified_balance_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/unified_vertical_split"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"/>

    <android.support.constraint.Guideline
        android:id="@+id/unified_vertical_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/mid_horizontal_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/unified_kin_coin"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginBottom="6dp"
        app:srcCompat="@drawable/kin_currency_purple"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@id/unified_vertical_split"
        app:layout_constraintBottom_toTopOf="@id/mid_horizontal_split"/>

    <TextView
        android:id="@+id/unified_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kin_transfer_text_big_size"
        android:textColor="@color/kin_transfer_purple"
        android:fontFamily="@font/sailec_medium"
        android:text="0"
        tools:text="1,115"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintStart_toEndOf="@id/unified_kin_coin"
        app:layout_constraintBottom_toTopOf="@id/mid_horizontal_split"/>
        />

    <TextView
        android:id="@+id/unified_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kin_transfer_text_smallest_size"
        android:textColor="@color/kin_transfer_dark"
        android:text="@string/unified_balance_total"
        app:layout_constraintTop_toBottomOf="@id/mid_horizontal_split"
        app:layout_constraintStart_toEndOf="@id/unified_vertical_split"
        />
    <TextView
        android:id="@+id/unified_manage_wallets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kin_transfer_text_smallest_size"
        android:textColor="@color/kin_transfer_purple"
        android:text="@string/unified_balance_manage_wallets"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.5"
        />

</android.support.constraint.ConstraintLayout>