<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="kinTextButtonRounded" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/kin_btn_text_size</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@fonts/sailec_medium</item>
    </style>

    <style name="kinTextButtonRounded.Purple">
        <item name="android:textColor">@drawable/kin_button_text_colors</item>
        <item name="android:background">@drawable/kin_button_rounded_drawable</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="kinTextButtonRounded.Hollow">
        <item name="android:textColor">@drawable/kin_button_hollow_text_colors</item>
        <item name="android:background">@drawable/kin_button_rounded_hollow_drawable</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="kinTextButtonRounded.White">
        <item name="android:textColor">@drawable/kin_white_button_text_colors</item>
        <item name="android:background">@drawable/kin_white_button_rounded_drawable</item>
    </style>

    <style name="KinTextRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sailec</item>
    </style>

    <style name="KinTextRegular.Dark">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="KinTextMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sailec_medium</item>
    </style>

    <style name="KinTextMedium.Dark">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="KinTextMedium.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KinTextRegular.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="KinTextRegular.Light.Small">
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="KinTextMedium.Dark.Header">
        <item name="android:textSize">@dimen/text_regular_size</item>
    </style>

    <style name="KinTextRegular.Dark.Body">
        <item name="android:textSize">@dimen/text_regular_size</item>
    </style>

    <style name="KinAlertText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/alert_text</item>
        <item name="android:textSize">@dimen/kin_alert_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="KinAlertText.Title">
        <item name="android:fontFamily">@font/sailec_medium</item>
    </style>

    <style name="KinAlertText.Subtitle">
        <item name="android:fontFamily">@font/sailec</item>
    </style>

</resources>